@model List<LSMS.Models.Course>

@{
    ViewData["Title"] = "Student List";
}

<h2>Courses List</h2>
<h1>number of courses : @Model.Count()</h1>
<div class="row mt-3">
    <div class="col-4">
        <a class="btn btn-primary btn-sm w-50" asp-action="CreateCourse">Add new Course</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Department Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.id </td>
                <td>@student.name</td>
                <td>@student.department.name</td>
            </tr>
        }
    </tbody>
</table>
