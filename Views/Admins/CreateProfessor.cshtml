@model CreateProfessor
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage) && ViewBag.ErrorMessage == "emptyId")
{
    <div class="alert alert-danger" role="alert">
        You should enter a valid SSN
    </div>
}
else if (!string.IsNullOrEmpty(ViewBag.ErrorMessage) && ViewBag.ErrorMessage == "emptyName")
{
    <div class="alert alert-danger" role="alert">
        You should enter a valid Professor name
    </div>
}
else if (!string.IsNullOrEmpty(ViewBag.Message) && ViewBag.Message == "success")
{
    <div class="alert alert-success" role="alert">
        The Professor inserted successfully
    </div>
}
else if (!string.IsNullOrEmpty(ViewBag.ErrorMessage) && ViewBag.ErrorMessage == "This Professor is already exist")
{
    <div class="alert alert-danger" role="alert">
        This Professor is already exist
    </div>
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Professor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="SSN" class="control-label"><span class="required">* SSN</span>:</label>
                        <input asp-for="SSN" class="form-control" />
                        <span asp-validation-for="SSN" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="name" class="control-label"><span class="required">* Full Name</span>:</label>
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="phoneNumber" class="control-label"><span class="required">* Phone Number</span>:</label>
                        <input asp-for="phoneNumber" class="form-control" />
                        <span asp-validation-for="phoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="departmentId"><span class="required">* Department ID</span>:</label>
                        <select name="departmentid" class="form-control">
                            <option value="">Select an Department</option>
                            @foreach (var item in ViewBag.Departments as List<Department>)
                            {
                                <option value="@item.id">@item.name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" asp-action="CreateProfessor" />
                    </div>
                </form>
            </div>
        </div>
