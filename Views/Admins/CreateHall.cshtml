@model Hall
@if (!string.IsNullOrEmpty(ViewBag.Message) && ViewBag.Message == "emptyId")
{
    <div class="alert alert-danger" role="alert">
        You should enter a valid hall id
    </div>
}
else if (!string.IsNullOrEmpty(ViewBag.Message) && ViewBag.Message == "emptyCapacity")
{
    <div class="alert alert-danger" role="alert">
        The capcaity should be at least 50 student
    </div>
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Hall</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="id" class="control-label"></label>
                        <input asp-for="id" class="form-control" />
                        <span asp-validation-for="id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="capacity" class="control-label"></label>
                        <input asp-for="capacity" class="form-control" type="text" pattern="[0-9]*" />
                        <span asp-validation-for="capacity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" asp-action="CreateHall"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>