@model EditModel
<h2>Edit Profile</h2>

<form asp-action="editProfile" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="SSN" />
    <input type="hidden" asp-for="ConfirmPassword" />
    <input type="hidden" asp-for="NewPassword" />
    <input type="hidden" asp-for="OldPassword" />

    <div class="form-group">
        <label asp-for="name">Name:</label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="phoneNumber">Phone Number:</label>
        <input asp-for="phoneNumber" class="form-control" />
        <span asp-validation-for="phoneNumber" class="text-danger"></span>
    </div>
    

    <!---<div class="form-group">
        <label asp-for="ProfilePicture">Profile Picture:</label>
        <input asp-for="ProfilePicture" type="file" class="form-control" />
        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
    </div>-->


    <button type="submit">Save Changes</button>
</form>